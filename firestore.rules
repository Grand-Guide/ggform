rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regras para uma coleção chamada "users"
    match /users/{userId} {
      // Permite leitura e escrita apenas para o usuário autenticado cujo ID coincide com o userId
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}