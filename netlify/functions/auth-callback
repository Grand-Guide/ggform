// netlify/functions/auth-callback.js
const axios = require('axios');

const CLIENT_ID = process.env.CLIENT_ID;
const CLIENT_SECRET = process.env.CLIENT_SECRET;
const REDIRECT_URI = 'https://ggform.netlify.app/.netlify/functions/auth-callback';

exports.handler = async function (event, context) {
  const params = new URLSearchParams(event.queryStringParameters);
  const code = params.get('code');

  if (!code) {
    return {
      statusCode: 400,
      body: 'No code provided',
    };
  }

  const tokenParams = new URLSearchParams({
    client_id: CLIENT_ID,
    client_secret: CLIENT_SECRET,
    code,
    grant_type: 'authorization_code',
    redirect_uri: REDIRECT_URI,
  });

  try {
    const tokenRes = await axios.post('https://discord.com/api/oauth2/token', tokenParams.toString(), {
      headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
    });

    const token = tokenRes.data.access_token;

    const userRes = await axios.get('https://discord.com/api/v10/users/@me', {
      headers: { Authorization: `Bearer ${token}` },
    });

    // Retornar os dados do usu√°rio
    return {
      statusCode: 200,
      body: JSON.stringify(userRes.data),
    };
  } catch (err) {
    console.error('Error fetching token or user data:', err.response?.data || err.message);
    return {
      statusCode: 500,
      body: JSON.stringify(err.response?.data || 'Unknown error occurred'),
    };
  }
};