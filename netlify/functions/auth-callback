const axios = require('axios');

const CLIENT_ID = process.env.DISCORD_CLIENT_ID; // Corrigido para corresponder às variáveis de ambiente
const CLIENT_SECRET = process.env.DISCORD_CLIENT_SECRET;
const REDIRECT_URI = process.env.NODE_ENV === 'development'
  ? 'http://localhost:8888/.netlify/functions/auth-callback'
  : 'https://ggform.netlify.app/.netlify/functions/auth-callback';

exports.handler = async function (event, context) {
  const code = event.queryStringParameters?.code;

  if (!code) {
    return {
      statusCode: 400,
      body: 'No code provided',
    };
  }

  const tokenParams = new URLSearchParams({
    client_id: CLIENT_ID,
    client_secret: CLIENT_SECRET,
    code,
    grant_type: 'authorization_code',
    redirect_uri: REDIRECT_URI,
  });

  try {
    // Obter o token
    const tokenRes = await axios.post('https://discord.com/api/v10/oauth2/token', tokenParams.toString(), {
      headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
    });

    const token = tokenRes.data.access_token;

    // Obter os dados do usuário
    const userRes = await axios.get('https://discord.com/api/v10/users/@me', {
      headers: { Authorization: `Bearer ${token}` },
    });

    // Retornar os dados do usuário
    return {
      statusCode: 200,
      body: JSON.stringify(userRes.data),
    };
  } catch (err) {
    console.error('Error fetching token or user data:', err.response?.data || err.message);
    return {
      statusCode: 500,
      body: JSON.stringify(err.response?.data || 'Unknown error occurred'),
    };
  }
};